@model DotNetCoreCrud.Web.Models.Employee

<h2>Delete Employee</h2>
<p>Are you sure you want to delete this employee?</p>
<div>
    <label>Name:</label> @Model.Name
</div>
<div>
    <label>Gender:</label> @Model.Gender
</div>
<div>
    <label>Age:</label> @Model.Age
</div>
<div>
    <label>Salary:</label> @Model.Salary
</div>
<div>
    <label>City:</label> @Model.City
</div>
<div>
    <label>Email:</label> @Model.Email
</div>
<div>
    <label>EmployeeType:</label> @Model.EmployeeType
</div>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
