@model List<DotNetCoreCrud.Web.Models.Product>

<h2>Product List</h2>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Product Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.ProductCategory</td>
                <td>

                    <a href="@Url.Action("Update", "Product", new { id = product.Id })" class="btn btn-primary">Update</a>

                    
                    <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


