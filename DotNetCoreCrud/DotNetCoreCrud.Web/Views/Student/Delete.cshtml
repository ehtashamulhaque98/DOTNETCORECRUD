@model DotNetCoreCrud.Web.Models.Student

<h2>Delete Student</h2>
<p>Are you sure you want to delete this student?</p>
<div>
    <label>Name:</label> @Model.Name
</div>
<div>
    <label>Gender:</label> @Model.Gender
</div>
<div>
    <label>Age:</label> @Model.Age
</div>
<div>
    <label>Email:</label> @Model.Email
</div>
<div>
    <label>Department:</label> @Model.Department
</div>
<div>
    <label>PhoneNumber:</label> @Model.PhoneNumber
</div>
<div>
    <label>City:</label> @Model.City
</div>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>



